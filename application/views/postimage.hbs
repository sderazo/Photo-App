<form  action="/posts/create"
       method="post"
       enctype="multipart/form-data"
       class="form-style">
    <div class="input-group">
        <label for="title">Title</label>
        <input class="input-text" type="text" name="title" 
        id="title">
    </div>

    <div class="input-group">
        <label for="description">Description</label>
        <input class="input-text" type="text" name="description" 
        id="description">
    </div>

     <p>
        <label for="image">Image</label>
         <input class="file-upload" type="file" name="uploadImage" 
        id="image">
    </p>

    <p>
        <input type="checkbox" name="policy"
         id="policy">
        <label for="policy">I accept the Acceptable Use Policy</label>
    </p>

    <p>
        <input class="button" type="submit" value="Post Image">
    </p>
</form>