
    <head>
        <meta charset="utf-8">
        <title>Registration</title>
        <link rel="stylesheet" href="../css/style.css">
        <script defer type="text/javascript" src="../js/registration.js"></script>
    </head>

    <body>        
        <form>
            <p class="input-group">
                <label for="username">Username</label>
                <input class="input-text" type="text" name="username" 
                id="username">
    
                <label for="email">Email</label>
                <input class="input-text" type="email" name="email"
                id="email">
            </p>

            <p class="input-group">
                <label for="password">Password</label>
                <input class="input-text" type="password" name="password"
                 id="password">
    
                <label for="confirmpassword">Confirm Password</label>
                <input class="input-text" type="password" name="confirmpassword"
                 id="confirmpassword">
            </p>

            <p>
                <input type="checkbox" name="agecheck"
                id="agecheck" required>
                <label for="agecheck">I am 13+ years of age</label>
            </p>

            <p>
                <input type="checkbox" name="tosprivacyrules"
                id="tosprivacyrules" required>
                <a href="">I accept the TOS and Privacy Rules</a>
            </p>

            <p>
                <input class="button" type="submit" value="Submit" id="submit">
            </p>

        </form>
    </body>
